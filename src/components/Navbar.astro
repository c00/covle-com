---
import DarkModeSwitch from "./DarkModeSwitch.svelte";
import Logo from "./Logo.astro";
---

<!-- Small screen menu -->
<div class="md:hidden flex flex-wrap justify-between mt-8">
  <a href="/" class="h-12 py-2"><Logo /></a>
  <nav class="grow text-right">
    <ul
      class="gap-4 px-8 py-3 font-semibold"
    >
      <li><a href="/about">About</a></li>
      <li><a href="/projects">Projects</a></li>
      <!-- <li><a href="/testimonies">Testimonies</a></li> -->
      <li><a href="/contact">Contact</a></li>

    </ul>
  </nav>
</div>

<!-- Big screen menu -->
<div class="hidden md:flex flex-wrap justify-between mt-8">
  <a href="/" class="w-1/5 h-12 py-2"><Logo /></a>
  <nav class="">
    <ul
      class="flex gap-4 rounded-full border border-slate-300 dark:border-slate-700 px-8 py-3 shadow-lg font-semibold dark:bg-slate-800"
    >
      <li><a href="/about">About</a></li>
      <li><a href="/projects">Projects</a></li>
      <!-- <li><a href="/testimonies">Testimonies</a></li> -->
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
  <div class="hidden lg:block w-1/5 text-right">
    <div class="inline-block">
      <DarkModeSwitch client:only />
    </div>
  </div>
</div>

<style>
  a {
    @apply hover:text-purple-500 transition-colors dark:hover:text-purple-600;
  }
</style>

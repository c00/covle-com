---
const { text = "Go back", link = "/projects" } = Astro.props;
---

<div class="inline-block">
  <a
    href={link}
    class="flex gap-3 items-center text-slate-600 hover:text-slate-800 transition-colors"
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-4 h-4"
      ><path
        fill="currentColor"
        d="M17.51 3.87L15.73 2.1L5.84 12l9.9 9.9l1.77-1.77L9.38 12l8.13-8.13z"
      ></path></svg
    >
    <div class="montserrat font-bold text-sm">
      {text}
    </div>
  </a>
</div>
